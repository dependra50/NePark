<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="np.com.nepark.nepark.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg"
       />
<TextView
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:layout_marginTop="200dp"
    android:background="#D7CCC8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="205dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_location"
        android:textColor="#0e0e0e"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"

        android:layout_marginLeft="10dp" />
    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#82B1FF"
        android:text="@string/dharan"
        android:textColor="#0e0e0e"
        android:layout_marginTop="40dp"
        android:layout_marginStart="160dp"


        android:id="@+id/autoCompleteTextView"
        android:layout_marginLeft="160dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parking_range"
        android:textColor="#0e0e0e"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:layout_marginStart="10dp"

        android:id="@+id/textView"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/seekBar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/range_in_km"
        android:textColorHint="#0e0e0e"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#0e0e0e"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"
            android:background="#4A148C"
            android:text="SUBMIT"

            android:textSize="14sp"
            android:textStyle="bold" />


    <android.support.v4.view.ViewPager
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#4527A0"
        android:layout_alignParentBottom="true"></android.support.v4.view.ViewPager>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#2196F3"
        android:layout_above="@+id/view"
        ></android.support.v4.view.ViewPager>
    <android.support.v4.view.ViewPager
        android:layout_width="250dp"
        android:layout_height="5dp"
        android:background="#2d2c2c"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        ></android.support.v4.view.ViewPager>
    </RelativeLayout>

</RelativeLayout>
